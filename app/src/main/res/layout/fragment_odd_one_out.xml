<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/oddOneOutLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.OddOneOutFragment">

    <TextView
            android:id="@+id/oddOneOutText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:autoSizeMaxTextSize="25sp"
            app:autoSizeMinTextSize="5sp"
            app:autoSizeTextType="uniform"
            android:fontFamily="casual"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideline53"
            android:gravity="center"
            android:padding="10dp"
            android:paddingEnd="50dp"
            android:paddingStart="50dp">
    </TextView>

    <LinearLayout
            android:id="@+id/choices"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="top|center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline53"
            android:layout_marginTop="20dp">
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline53"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>